// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  idUser        Int      @id @default(autoincrement())
  username      String   @unique
  register_date DateTime @default(now())
  Points        Points[]
  idRole        Int
  role          Roles    @relation(fields: [idRole], references: [idRole])
}

model Points {
  pointID    Int      @id @default(autoincrement())
  date       DateTime @default(now())
  userPoints Int      @default(0)
  user       Users    @relation(fields: [idUser], references: [idUser])
  idUser     Int
}

model Criterias {
  idCriteria   Int    @id @default(autoincrement())
  name         String @unique
  inGamePoints String
  actualValue  Int
}

model Roles {
  idRole Int     @id @default(autoincrement())
  role   String
  Users  Users[]
}
